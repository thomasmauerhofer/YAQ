<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/themePreviewLayout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/theme_chooser_list_view_entry_padding"
        android:id="@+id/themePreviewImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/theme_chooser_list_view_entry_padding"
        android:textSize="@dimen/theme_chooser_list_view_entry_text_size"
        style="@style/table_text_gray"
        android:id="@+id/themePreviewTextView"
        android:layout_gravity="center" />

</LinearLayout>